<div class="container">
	<div class="text-center">
		<h2>Create a username</h2>
	</div>
	<div class="container">
		<%= form_for @user, :url => {:controller=>"users",:action => "create"},remote:false do |f|%>
			<%=f.text_field :name ,:class=>'form-control'%> 
			<%=f.submit  :class=>'btn btn-primary'%>
		<%end%>
	</div>
</div>